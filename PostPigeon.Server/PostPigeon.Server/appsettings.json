{
  "PostPigeonDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "chatroom-db",
    "MessagesCollectionName": "messages",
    "UsersCollectionName": "users",
    "RefreshTokensCollectionName": "refreshTokens"
  },
  "JwtSettings": {
    "Secret": "32-chars long key to sign tokens",
    "AccessTokenLifetime": 15,
    "RefreshTokenLifetime": 7,
    "Issuer": "PostPigeon",
    "Audience": "PostPigeon"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  }
}